@model List<MvcEmployeCrud.DAL.Department>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="col-md-4">
            <h2>
                @Html.ActionLink("Create New Department", "Create", "NewDepartment")
            </h2>
        </div> <div class="col-md-8">

        </div>
    </div>
</div>
<table class="table table-condensed">
    <thead>
        <tr>
            <th>ID </th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.ID</td>
                <td>@emp.Name </td>
                <td>@Html.ActionLink("Edit", "Update", new { id = emp.ID }) </td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = emp.ID }, new { onclick = "return confirm('Are you sure you wish to delete this Department?');" }) </td>
            </tr>
        }
    </tbody>
</table>